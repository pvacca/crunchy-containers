{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "crunchy-pv2"
  },
  "spec": {
    "capacity": {
        "storage": "4Gi"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "$NFS_PATH",
        "server": "$LOCAL_IP"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
