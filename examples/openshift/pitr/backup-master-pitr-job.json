{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "backup-pitr-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Master Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "image tag to use"
    }],

    "objects": [{
        "kind": "Job",
        "apiVersion": "extensions/v1beta1",
        "metadata": {
            "name": "backup-master-pitr-pvc"
        },
        "spec": {
            "selector": {
                "matchLabels": {
                    "app": "backup-master-pitr-pvc"
                }
            },
            "template": {
                "metadata": {
                    "name": "backup-master-pitr-pvc",
                    "labels": {
                        "app": "backup-master-pitr-pvc"
                    }
                },
                "spec": {
                    "securityContext": {
                        "supplementalGroups": [65534]
                    },

                    "volumes": [{
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "crunchy-pvc"
                        }
                    }],
                    "containers": [{
                        "name": "backup-master-pitr-pvc",
                        "image": "crunchydata/crunchy-backup:${CCP_IMAGE_TAG}",
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }],
                        "env": [{
                            "name": "BACKUP_HOST",
                            "value": "master-pitr"
                        }, {
                            "name": "BACKUP_LABEL",
                            "value": "somebackup"
                        }, {
                            "name": "BACKUP_USER",
                            "value": "master"
                        }, {
                            "name": "BACKUP_PASS",
                            "value": "password"
                        }, {
                            "name": "BACKUP_PORT",
                            "value": "5432"
                        }]
                    }],
                    "restartPolicy": "Never"
                }
            }
        }
    }]
}
