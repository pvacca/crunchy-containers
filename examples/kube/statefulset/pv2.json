{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
 "labels": {
          "app": "pgset"
        },

    "name": "pv2"
  },
  "spec": {
    "capacity": {
        "storage": "150M"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "$NFS_PATH",
        "server": "$LOCAL_IP"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
