{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "master-pvc",
        "labels": {
            "name": "master-pvc"
        }
    },
    "spec": {
        "securityContext": {
            "supplementalGroups": [65534]
        },

        "containers": [{
            "name": "master-pvc",
            "image": "crunchydata/crunchy-postgres:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PGHOST",
                "value": "/tmp"
            }, {
                "name": "PG_MASTER_USER",
                "value": "master"
            }, {
                "name": "PG_MODE",
                "value": "master"
            }, {
                "name": "PG_MASTER_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }],
            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }, {
                "mountPath": "/backup",
                "name": "backup",
                "readOnly": true
            }]
        }],
        "volumes": [{
            "name": "pgdata",
            "persistentVolumeClaim": {
                "claimName": "crunchy-pvc"
            }
        }, {
            "name": "backup",
            "emptyDir": {}
        }]
    }
}
